@page
@model CreateModel
@{
    ViewData["Title"] = "Create Group";
}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-page="/group/index">Groups</a>
            </li>
            <li class="breadcrumb-item active"
                aria-current="page">Create Group</li>
        </ol>
    </nav>

    <div class="card mb-5">
        <div class="card-header">
            <i class="fas fa-users mr-2"
               aria-hidden="true"></i> Group
        </div>
        <div class="card-body">
            <form id="group-form"
                  name="group-form"
                  role="form"
                  method="post">

                <div class="alert alert-success alert-dismissible fade show"
                     exclude-if="@String.IsNullOrEmpty(Model.Message)"
                     role="alert">
                    @Model.Message
                    <button type="button"
                            class="close"
                            data-dismiss="alert"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Group.Name">Name <required/></label>
                    <input asp-for="Group.Name"
                           type="text"
                           class="form-control"
                           placeholder="Name"/>
                    <span asp-validation-for="Group.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Group.Description">Description</label>
                    <textarea asp-for="Group.Description"
                              rows="10"
                              class="form-control"
                              placeholder="Description"></textarea>
                    <span asp-validation-for="Group.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Group.Sequence">Sequence <required/></label>
                    <input asp-for="Group.Sequence"
                           type="number"
                           class="form-control"
                           placeholder="Sequence"/>
                    <span asp-validation-for="Group.Sequence" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col">
                        <button id="save-button"
                                type="submit"
                                class="btn btn-primary">
                            Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

