@using InstructorIQ.Core.Data.Entities
@using InstructorIQ.Core.Security
@inject SignInManager<User> SignInManager
@inject UserClaimManager UserClaimManager

<nav id="navbar-main"
     class="navbar navbar-expand-lg navbar-light fixed-top navbar-default">
    <div class="container-fluid">
        <a class="navbar-brand"
           asp-page="/index"
           style="padding: 0">
            <img src="~/media/logo-full.svg"
                 alt="InstructorIQ"
                 height="30" />
        </a>
        <button class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarCollapse"
                aria-controls="navbarCollapse"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse"
             id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <!-- Calendar Menu -->
                <li class="nav-item dropdown">
                    <a id="navbarDropdownCalendar"
                       class="nav-link dropdown-toggle"
                       href="#"
                       data-toggle="dropdown"
                       aria-haspopup="true"
                       aria-expanded="false">
                        Calendar
                    </a>
                    <div class="dropdown-menu"
                         aria-labelledby="navbarDropdownCalendar">
                        <a id="navbarViewCalendarLink"
                           class="dropdown-item"
                           asp-page="/calendar/index">View Calendar</a>
                    </div>
                </li>
                <!-- Topic Menu -->
                <li class="nav-item dropdown">
                    <a id="navbarDropdownTopic"
                       class="nav-link dropdown-toggle"
                       href="#"
                       data-toggle="dropdown"
                       aria-haspopup="true"
                       aria-expanded="false">
                        Topics
                    </a>
                    <div class="dropdown-menu"
                         aria-labelledby="navbarDropdownTopic">
                        <a id="navbarViewTopicLink"
                           class="dropdown-item"
                           asp-page="/topic/index">View Topics</a>
                        <div class="dropdown-divider"></div>
                        <a id="navbarCreateTopicLink"
                           class="dropdown-item"
                           asp-page="/topic/create">Add Topic</a>
                    </div>
                </li>

                <!-- Instructor Menu -->
                <li class="nav-item dropdown">
                    <a id="navbarDropdownInstructors"
                       class="nav-link dropdown-toggle"
                       href="#"
                       data-toggle="dropdown"
                       aria-haspopup="true"
                       aria-expanded="false">
                        Instructors
                    </a>
                    <div class="dropdown-menu"
                         aria-labelledby="navbarDropdownInstructors">
                        <a id="navbarViewInstructorsLink"
                           class="dropdown-item"
                           asp-page="/instructor/index">View Instructors</a>
                        <div class="dropdown-divider"></div>
                        <a id="navbarCreateInstructorLink"
                           class="dropdown-item"
                           asp-page="/instructor/create">Add Instructor</a>
                    </div>
                </li>

                <!-- Administrative  Menu -->
                <li class="nav-item dropdown">
                    <a id="navbarDropdownAdministrative"
                       href="#"
                       class="nav-link dropdown-toggle"
                       data-toggle="dropdown"
                       aria-haspopup="true"
                       aria-expanded="false">
                        Administrative
                    </a>
                    <div class="dropdown-menu"
                         aria-labelledby="navbarDropdownAdministrative">
                        <a id="navbarAdministrativeLocationsLink"
                           class="dropdown-item"
                           asp-page="/location/index">Locations</a>
                        <a id="navbarAdministrativeGroupsLink"
                           class="dropdown-item"
                           asp-page="/group/index">Groups</a>
                        <div class="dropdown-divider"></div>

                    </div>
                </li>
            </ul>

            <form class="form-inline mt-2 mt-md-0 d-none d-xl-block">
                <input id="navbarSearchInput"
                       class="form-control mr-sm-2"
                       type="text"
                       placeholder="Search"
                       aria-label="Search"
                       style="background: transparent;">
            </form>

            <!-- User Menu -->
            <ul class="navbar-nav"
                style="margin-right: 15px;">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item dropdown">
                        <a id="navbarDropdownUser"
                           href="#"
                           class="nav-link dropdown-toggle"
                           data-toggle="dropdown"
                           aria-haspopup="true"
                           aria-expanded="false">
                            <gravatar email="@User.Identity.Name"
                                      class="rounded-circle"
                                      size="24"></gravatar>
                            <span id="navbarIdentityUsername">@UserClaimManager.GetDisplayName(User)</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right"
                             aria-labelledby="navbarDropdownUser">
                            <a id="navbarIdentityProfile"
                               class="dropdown-item"
                               asp-page="/user/profile">
                                <i class="fas fa-user"></i> Update Profile
                            </a>
                            <a id="navbarIdentityProfile"
                               class="dropdown-item"
                               asp-page="/user/password">
                                <i class="fas fa-lock"></i> Change Password
                            </a>
                            <div class="dropdown-divider"></div>
                            <a id="navbarIdentityLogout"
                               class="dropdown-item"
                               asp-page="/account/logout"
                               asp-route-returnurl="/">
                                <i class="fas fa-power-off"></i> Logout
                            </a>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-page="/account/login">
                            Login
                        </a>
                    </li>

                }
            </ul>
        </div>
    </div>
</nav>

