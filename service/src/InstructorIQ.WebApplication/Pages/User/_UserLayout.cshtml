@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-user mr-2"></i> Profile
                </div>
                <div class="card-body">
                    <div class="tab-container">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a id="user-profile-tab"
                                   title="Profile"
                                   class="nav-link @(ViewData["Title"] == "Profile" ? "active": "")"
                                   asp-page="/user/profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a id="user-password-tab"
                                   title="Password"
                                   class="nav-link @(ViewData["Title"] == "Password" ? "active": "")"
                                   asp-page="/user/password">Password</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
